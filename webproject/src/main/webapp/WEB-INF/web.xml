<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://appengine.google.com/ns/1.0">
  <!-- Entry Servlet -->
  <servlet>
    <servlet-name>entry</servlet-name>
    <servlet-class>com.google.sps.servlets.EntryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>entry</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <!-- Landing Servlet -->
  <servlet>
    <servlet-name>Landing Page</servlet-name>
    <jsp-file>/landing.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Landing Page</servlet-name>
    <url-pattern>/landing</url-pattern>
  </servlet-mapping>

  <!-- Listings Servlet -->
  <servlet>
    <servlet-name>Listings</servlet-name>
    <jsp-file>/listings.html</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>Listings</servlet-name>
    <url-pattern>/listings</url-pattern>
  </servlet-mapping>

  <!-- Blobstore Servlets -->
  <servlet>
    <servlet-name>Blobstore</servlet-name>
    <servlet-class>com.google.sps.servlets.BlobstoreServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Blobstore</servlet-name>
    <url-pattern>/blobstore</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FormHandler</servlet-name>
    <servlet-class>com.google.sps.servlets.FormHandlerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormHandler</servlet-name>
    <url-pattern>/my-form-handler</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.google.sps.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
</web-app>
