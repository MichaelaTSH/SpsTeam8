<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://appengine.google.com/ns/1.0">
  <!-- Landing Servlet -->
  <servlet>
    <servlet-name>LandingServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.LandingServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LandingServlet</servlet-name>
    <url-pattern>/landing</url-pattern>
  </servlet-mapping>

  <!-- Listings Servlet -->
  <servlet>
    <servlet-name>ListingsServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.ListingsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListingsServlet</servlet-name>
    <url-pattern>/listings</url-pattern>
  </servlet-mapping>

  <!-- Blobstore Servlets -->
  <servlet>
    <servlet-name>Blobstore</servlet-name>
    <servlet-class>com.google.sps.servlets.BlobstoreServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Blobstore</servlet-name>
    <url-pattern>/blobstore</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>FormHandler</servlet-name>
    <servlet-class>com.google.sps.servlets.FormHandlerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FormHandler</servlet-name>
    <url-pattern>/my-form-handler</url-pattern>
  </servlet-mapping>

  <!-- Login Servlet -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Logout Servlet -->
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  
  <!-- Room Servlet -->
  <servlet>
    <servlet-name>Room</servlet-name>
    <servlet-class>com.google.sps.servlets.RoomServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Room</servlet-name>
    <url-pattern>/room</url-pattern>
  </servlet-mapping>

  <!-- Entry Servlet -->
  <servlet>
    <servlet-name>EntryServlet</servlet-name>
    <servlet-class>com.google.sps.servlets.EntryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EntryServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  
</web-app>
